#include <algorithm>
#include <iostream>

using namespace std;

int main()
{
     int array1[]={1, 2, 3,4},array2[]={5,6,7,8},i;
     
     for (i=0;i<4;i++)
     {
     cout<<array1[i]<<" "<<array2[i]<< '\n';}
     
     for (i=0;i<4;i++){
     swap(array1[i], array2[i]);
     
     }
     for (i=0;i<4;i++)
     {
     cout<<array1[i]<<" "<<array2[i]<< '\n';}
     
     return 0;
}
